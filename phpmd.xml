<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Nella Framework PHPMD rule set" xmlns="http://pmd.sf.net/ruleset/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd" xsi:noNamespaceSchemaLocation=" http://pmd.sf.net/ruleset_xml_schema.xsd">

	<description>Nella Framework PHPMD rule set</description>

	<rule ref="rulesets/codesize.xml" />
	<rule ref="rulesets/design.xml" />
	<rule ref="rulesets/naming.xml">
		<exclude name="ShortVariable" />
	</rule>
	<rule ref="rulesets/naming.xml/ShortVariable">
		<properties>
			<property name="minimum" description="Minimum length for a variable, property or parameter name" value="2"/>
		</properties>
	</rule>
	<rule ref="rulesets/unusedcode.xml" />
</ruleset>